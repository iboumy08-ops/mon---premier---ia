print("Je m'appelle Ibrahima Sory Camara")

print(2 + 2)

nom = "Ibrahima Sory Camara"
age = 20
print("Bonjour", nom, "! Tu as", age, "ans.")

# === TON PREMIER MODÈLE IA : PRÉDICTION DE NOTE ===
heures = float(input("Combien d'heures tu révises par semaine ? "))
note = 5 + 1.5 * heures
note = min(note, 20)
print(f"Si tu révises {heures}h, tu auras environ {note:.1f}/20 !")

# === IA SANS INTERNET – DONNÉES DANS LE CODE ===
heures = [7, 4, 10, 2]      # ← tes données
notes  = [15.5, 11.0, 18.0, 8.0]

# Calcul simple : moyenne des gains
gain_moyen = 0
for i in range(len(heures)):
    gain_moyen += (notes[i] - 5) / heures[i]
gain_moyen /= len(heures)

# Prédiction
h = float(input("Combien d'heures tu révises ? "))
note_predite = 5 + gain_moyen * h
note_predite = min(note_predite, 20)

print(f"IA locale prédit : {note_predite:.1f}/20")

# === IA EXAM COACH – NIVEAU 2 ===
print("\n" + "="*40)
print("IA QUI TE DIT SI TU VAS RÉUSSIR")
print("="*40)

revision = float(input("Heures révisées cette semaine : "))
sommeil = float(input("Heures de sommeil par nuit : "))
stress = input("Tu stresses ? (oui/non/un peu) : ").lower()

# Calcul du score (sur 100)
score = 0
score += min(revision * 3, 50)      # max 50 pts
score += min(sommeil * 5, 35)       # max 35 pts
if stress == "non":
    score += 15
elif stress == "un peu":
    score += 8
# sinon 0

print(f"\nScore : {score}/100")
if score >= 70:
    print("Tu vas RÉUSSIR ! Continue !")
elif score >= 50:
    print("C’est bien, mais révise + ou dors mieux.")
else:
    print("Attention ! Il faut plus de révision et de sommeil.")
